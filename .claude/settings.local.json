{
  "permissions": {
    "allow": [
      "Bash(claude mcp:*)",
      "Bash(where claude:*)",
      "WebFetch(domain:drive.google.com)",
      "WebFetch(domain:i.vgy.me)",
      "Bash(curl:*)",
      "Bash(powershell:*)",
      "WebSearch",
      "Bash(NODE_OPTIONS=\"--tls-max-v1.2\" npx create-expo-app@latest:*)",
      "Bash(ping:*)",
      "Bash(npm ping:*)",
      "Bash(git commit:*)"
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "transport": "stdio"
    }
  }
}
